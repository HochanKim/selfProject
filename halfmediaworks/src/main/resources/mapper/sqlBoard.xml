<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.hmw.board.mapper.BoardMapper">
	<!-- 게시글 호출 -->
	<select id="getContents" parameterType="hashmap" resultType="com.example.hmw.board.model.BoardModelDto">	
		SELECT *
		FROM hmw_contents c
		INNER JOIN hmw_conts_kind k ON c.kind = k.kindId
		ORDER BY cdateTime DESC
		<where>
			<if test="kindId == ''">
				WHERE 1=1
			</if>
			<if test="kindId != null">
				<choose>
					<when test="kindId == 1">WHERE kindId = '1'</when>
					<when test="kindId == 2">WHERE kindId = '2'</when>
					<when test="kindId == 3">WHERE kindId = '3'</when>
					<when test="kindId == 4">WHERE kindId = '4'</when>
				</choose>
			</if>
		</where>
		LIMIT #{start}, #{size}
	</select>
	
